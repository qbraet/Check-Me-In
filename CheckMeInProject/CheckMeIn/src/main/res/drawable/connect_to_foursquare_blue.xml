<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:drawable="@drawable/connect_to_foursquare_blue_default" android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:state_enabled="true"/>
    <item android:drawable="@drawable/connect_to_foursquare_blue_default" android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:state_enabled="true"/>

    <!-- Focused states -->
    <item android:drawable="@drawable/connect_to_foursquare_blue_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:state_enabled="true"/>
    <item android:drawable="@drawable/connect_to_foursquare_blue_pressed" android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:state_enabled="true"/>

    <!-- Pressed -->
    <item android:drawable="@drawable/connect_to_foursquare_blue_pressed" android:state_pressed="true" android:state_enabled="true"/>

</selector>